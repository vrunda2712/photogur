<h1>Total Pictures : (<%= @pictures.length %>)</h1>
<div class="user-account">
  <% if current_user %>
    Signed in as : <%= current_user.email %>. <%= link_to "Log Out", sessions_path("current"), :method => :delete %>
  <% else %>
    <%= link_to("Log In", new_sessions_path) %> | <%= link_to("Sign Up", new_users_path) %>
  <% end %>
</div>

<!-- <%= link_to("Add New Picture","/pictures/new")%> -->
<hr>
<h2>Add New Picture</h2>
<%= render 'form' %>

<% @pictures.each do |picture| %>
  <%= render 'pictures/picture', picture: picture %>
<% end %>
<hr>

<h1>Most recent Pictures</h1>
  <ul>
    <% @most_recent_pictures.each do |picture| %>
