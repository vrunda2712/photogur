<h1>Sign Up !</h1>

<% if @user.errors.any? %>
  <div>
    <ul>
      <% @user.errors.full_messages.each do |full_msg| %>
        <li><%= full_msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for (@user) do |f| %>
  <p>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <%= f.submit 'Sign Up' %>
  </P>

<% end %>
